#include <iostream>
#include <algorithm>
#include <chrono>
#include <cstdlib>
#include <ctime>

using namespace std;
using namespace chrono;

void bubbleSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int tmp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = tmp;
            }
        }
    }
}

int linearSearch(int arr[], int n, int key) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) return i;
    }
    return -1;
}

int binarySearch(int arr[], int n, int key) {
    int l = 0, r = n - 1;
    while (l <= r) {
        int mid = (l + r) / 2;
        if (arr[mid] == key) return mid;
        else if (arr[mid] < key) l = mid + 1;
        else r = mid - 1;
    }
    return -1;
}

int main() {
    srand(time(0));

    int sizes[] = { 100, 500, 1000 };

    for (int s = 0; s < 3; s++) {
        int n = sizes[s];
        int* data = new int[n];
        for (int i = 0; i < n; i++) {
            data[i] = rand() % 100000;
        }

        
        int* arr1 = new int[n];
        for (int i = 0; i < n; i++) arr1[i] = data[i];
        auto start = high_resolution_clock::now();
        bubbleSort(arr1, n);
        auto end = high_resolution_clock::now();
        cout << "BubbleSort n=" << n << " time: "
            << duration_cast<microseconds>(end - start).count() << " ms\n";
        delete[] arr1;

        // QuickSort 
        int* arr2 = new int[n];
        for (int i = 0; i < n; i++) arr2[i] = data[i];
        start = high_resolution_clock::now();
        sort(arr2, arr2 + n);
        end = high_resolution_clock::now();
        cout << "QuickSort n=" << n << " time: "
            << duration_cast<microseconds>(end - start).count() << " ms\n";

        
        int key = rand() % 100000;
        start = high_resolution_clock::now();
        linearSearch(data, n, key);
        end = high_resolution_clock::now();
        cout << "LinearSearch n=" << n << " time: "
            << duration_cast<nanoseconds>(end - start).count() << " ns\n";

       
        start = high_resolution_clock::now();
        binarySearch(arr2, n, key);
        end = high_resolution_clock::now();
        cout << "BinarySearch n=" << n << " time: "
            << duration_cast<nanoseconds>(end - start).count() << " ns\n";

        cout << "----------------------\n";

        delete[] arr2;
        delete[] data;
    }

    return 0;
}
